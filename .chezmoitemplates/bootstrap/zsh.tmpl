# vim: set ft=bash:

if has zsh; then
    if ! echo "$SHELL" | grep -q 'zsh'; then
        {{ if .sudo }}
            info 'Set zsh as default shell'
            # Sudo password is cached
            log sudo chsh -s "$(which zsh)" "$USER"
        {{ else }}
        warn "Could not make zsh the default shell. No sudo"
        {{ end }}
    fi
fi
