#!/usr/bin/env bash
# vim: set ft=bash:

# This script is set to re-execute when there's a change in the chezmoi.toml
# configuration. Including the hash value from the .scriptstate directory allows
# the script to detect changes in this file, ensuring it runs again whenever
# necessary to reflect any new configurations or installation requirements.
# {{ include ".scriptstate/chezmoi.toml.hash" }} 

source ~/.local/share/chezmoi/.script-helper
set -euo pipefail
trap on_error ERR
source ~/.config/shell/env

{{ if .sudo }}
if command -v sudo >/dev/null 2>&1 && id -nG "$USER" | grep -qE '\b(sudo|admin)\b'; then
    if sudo -n true 2>/dev/null; then
        info "Sudo credentials already cached."
    else
        info "Requesting your password to enable sudo access..."
        trap - ERR
        set +e
        sudo -v
        rc=$?
        set -e
        trap on_error ERR
        if [ "$rc" -eq 0 ]; then
            info "Sudo access granted and cached"
        else
            error "Sudo authentication failed or was cancelled. Aborting setup."
            info "Tip: Disable sudo in "~/.config/chezmoi/chezmoi.toml" to skip sudo-dependent installs"
            exit 1
        fi
    fi
else
    error "This user has no sudo or admin privileges. Aborting setup."
    info "Tip: Disable sudo in "~/.config/chezmoi/chezmoi.toml" to skip sudo-dependent installs"
    exit 1
fi
{{ end }}

